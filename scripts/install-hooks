#!/usr/bin/env bash
# Install ypi git hooks in this repository.

set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$ROOT_DIR"

git config core.hooksPath .githooks
chmod +x .githooks/* scripts/pre-push-checks

echo "âœ… Installed hooks for $ROOT_DIR"
echo "   core.hooksPath=$(git config --get core.hooksPath)"
